<%= simple_form_for('user', :url => user_registration_path) do |f| %>
	<%= f.simple_fields_for :highlights do |h| %>
		<%= h.input :name, label: 'Player Name' %>
		<%= h.input :highlight_type_id, value: '1'%>
	<%- end %>
  <%= f.input :email, :required => true, :autofocus => true %>
  <%= f.input :password, :required => true %>
  <%= f.input :password_confirmation, :required => true %>
  <%= f.button :submit, "Sign up" %>
<% end %>

<%= simple_form_for @highlight do |h| %>
	<%= h.input :name %>
	<%= h.input :highlight_type_id %>
	<%= h.input :user_id %>
	<%= h.button :submit %>
<%- end %>



