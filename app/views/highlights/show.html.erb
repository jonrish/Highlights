<h2>Here are all of your highlight details.</h2>

<ul>
	<li>Name: <%= @highlight.name %></li>
	<li>Nickname: <%= @highlight.nickname %></li>
	<li>Hometown: <%= @highlight.hometown %></li>
	<li>Bats: <%= @highlight.bats %></li>
	<li>Throwing Hand: <%= @highlight.throwing_hand %></li>
	<li>Scenario: <%= @highlight.scenario %></li>
	<li>Position: <%= @highlight.position %></li>
	<%- if @highlight.highlight_type_id > 1 %>
		<li>School: <%= @highlight.age %></li>
		<li>Age: <%= @highlight.age %></li>
	<%- end %>
	<%- if @highlight.highlight_type_id > 2 %>
		<li>Others to reference: <%= @highlight.family_friends %></li>
		<li>Name(s) of Opponent: <%= @highlight.opponent %></li>
	<%- end %>
	<li>Additional Information: <%= @highlight.notes %></li>
	<li>Status of your highlight order: <%= @highlight.state %></li>
	<%- unless @highlight.highlight_file.blank? %>
		<li><%= link_to 'Highlight', @highlight.highlight_file.url %></li>
	<%- end %>
</ul>

<%- if @highlight.state == 'pending' %>
	<p><%= link_to 'Click to make changes', edit_highlight_path(@highlight) %></p>
	<p><%= link_to 'Cancel / Delete This Highlight', @highlight, method: :delete, data: { confirm: "Are you sure?" } %></p>
	<h3>Your Custom Highlight Costs: <%= number_to_currency(@highlight_type.price * 0.01) %></h3>
	<%= form_tag charges_path do %>

	  <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
	          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
	          data-description="<%= @highlight_type.name %> Highlight"
	          data-amount="<%= @highlight_type.price %>"></script>

	<% end %>
<%- else %>
	<h3>You paid <%= number_to_currency(@highlight_type.price * 0.01)%> for your custom highlight.</h3>
<%- end %>
