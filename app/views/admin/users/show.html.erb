<div class="admin-users-show">
	<ul>
		<li>User's ID Number: <%= @user.id%></li>
		<li>User's Email: <%= @user.email %></li>
		<li>Is User an Admin: <%= @user.admin %></li>
		<li>User Signed up on: <%= @user.created_at.strftime("%Y-%m-%d") %></li>
		<h3>User's Highlights: </h3>
			<ol>
				<%- @user.highlights.each do |highlight| %>
					<li>
						<ul>
							<li><%= highlight.name %></li>
							<li><%= highlight.highlight_type.name %></li>
							<li><%= highlight.created_at.strftime("%Y-%m-%d") %></li>
							<li><%= highlight.state %></li>
							<li><%= link_to 'Highlight Details', admin_highlight_path(highlight) %></li>
							<%- unless highlight.highlight_file.blank? %>
								<li><%= link_to 'Highlight', highlight.highlight_file.url %></li>
							<%- end %>
						</ul>
					</li>
				<%- end %>
			</ol>
		<li><%= link_to 'Edit User', edit_admin_user_path(@user) %></li>
	</ul>
</div>